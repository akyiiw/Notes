<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Editor 
               x:Name="Edit"
               Placeholder="Digita ai"
               TextChanged="Edit_TextChanged"
                Completed="Edit_Completed"
                AutoSize="TextChanges"
                Text="" />
            <HorizontalStackLayout>
                    <Button
                    x:Name="SalvarBtn"
                    Text="Salvar" 
                    SemanticProperties.Hint="Botão para salvar seu texto"
                    Clicked="SalvarBtn_Clicked"
                    HorizontalOptions="Fill"
                    Margin="10" />
                <Button
                    x:Name="ApagarBtn"
                    Text="Apagar" 
                    SemanticProperties.Hint="Botão para apagar seu texto"
                    Clicked="ApagarBtn_Clicked"
                    HorizontalOptions="Fill"
                    Margin="10" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
